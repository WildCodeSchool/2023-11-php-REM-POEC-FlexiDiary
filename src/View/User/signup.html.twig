{% extends 'layout.html.twig' %}

{% block stylesheet %}
		<link rel="stylesheet" href="/assets/css/register.css">
    <link rel="stylesheet" href="/assets/css/header_style.css">
    <link rel="stylesheet" href="/assets/css/footer_style.css">
{% endblock %}

{% block content %}
<div class="container">
<div class="form-container">
<h1 class="form-title">Inscription</h1>

	{% for error in errors %}
		<p>
	   	{{error }}
		</p>
	{% endfor %}

<form action="" method="post" enctype="multipart/form-data" class="register-form">
<div>
    <label for="imageUpload" class="avatar"><div class="plus"></div></label>   
    <input type="file" name="avatar" id="imageUpload" />
</div>
<div>
  <label for="name">Nom</label>    
    <input type="input" name="name" id="name" required/>
</div>
<div>
  <label for="email">Email</label>    
    <input type="email" name="email" id="email" required/>
</div>

<div>
  <label for="password">Mot de passe</label>
    <input type="password" name="password" id="password" required/>
</div>

    <button class="button form-button" type="submit">S'inscrire</button>
</form>
</div>
</div>
{% endblock %}