{% extends 'layout.html.twig' %}

{% block stylesheet %}
	{{parent()}}
	<link rel="stylesheet" href="/assets/css/article-form.css">
	<link rel="stylesheet" href="/assets/css/footer_sticky.css">
{% endblock %}

{% block content %}
	<div>
		{% for error in errors %}
			<p>{{error}}</p>
		{% endfor %}
	</div>
	<h1 class="title-form">Rempli ton blog d'un article !</h1>
	<div class="container">	
		<form class="form" action="/article/create?id={{ idBlog }}" method="post" enctype="multipart/form-data">
			<div class="blog-input">
				<label for="Title">Le titre de l'article:</label>
				<br>
				<input type="text" id="Title" name="Title" required="true">
			</div>
			<div class="blog-input">
				<label for="content">Ton meilleur contenu :</label>
				<br>
				<textarea name="Content" id="content" cols="90%" rows="10"></textarea>
			</div>
			<div class="blog-input">
				<label for="picture">Quelle image accompagnera tes mots ?
				</label>
				<input type="file" name="picture" id="picture">
			</div>
			<div class="blog-input">
			<div>
				<label for="tags">Sujet de cet article :</label><br>
				<select name="tags" id="tags">
					{% for tag in tags %}
						<option value="{{tag.idTag}}">{{ tag.Tag_Name }}</option>
					{% endfor %}
				</select>
				</div>
			</div>
			<div class="blog-checkbox-input">
				<label for="visibility">Mettre en ligne immédiatement ?
				</label>
				<input type="checkbox" name="visibility" id="visibility">
			</div>
			<button class="button form-button" type="submit" id="submit">Créer un article</button>
		</form>
	</div>
{% endblock %}

