{% extends 'layout.html.twig' %}
{% block stylesheet %}
	{{parent()}}
	<link rel="stylesheet" href="/assets/css/forms-blog.css">
{% endblock %}

{% block content %}
<h1 class="title-form">Donnes une âme à ton nouveau blog!</h1>
<div class="container">
<form method="post" class="form-create-blog" enctype="multipart/form-data">
	<div>
		<label for="Title">Le titre de ton blog :</label><br>
		<input class="input-title" type="text" id="Title" name="Title" required="true">
	</div>
	<div>
		<label for="Description">Décris ton univers en quelques mots :
		</label>
		<textarea class="input-description" name="Description" id="Description" cols="80%" rows="10" required></textarea>
	</div>
	<div>
    <label for="bg-image">Choisis une image pour l'identité de ton blog :</label>   
    <input type="file" name="bg-image" id="bg-image" />
	</div>
	<div>
		<div>
			<label for="Typo-title">Choisis la typo pour les titres d'articles</label><br>
			<select class="input-typo" class="typo1" id="Typo-title" name="Typo-title" required>
				<option value="">Select</option>
				<option value="Serif Fonts" style="font-weight: bold; background-color: #EEEEEE">Serif Fonts</option>
				<option value="Georgia,serif" style="font-family: Georgia,serif">Georgia</option>
				<option value="Palatino Linotype,Book Antiqua,Palatino,serif" style="font-family: Palatino Linotype,Book Antiqua,Palatino,serif">Palatino Linotype</option>
				<option value="Times New Roman,Times,serif" style="font-family: Times New Roman,Times,serif">Times New Roman</option>
				<option value="Sans-Serif Fonts" style="font-weight: bold; background-color: #EEEEEE">Sans-Serif Fonts</option>
				<option value="Arial,Helvetica,sans-serif" style="font-family: Arial,Helvetica,sans-serif">Arial</option>
				<option selected="selected" value="Tahoma,Geneva,sans-serif" style="font-family: Tahoma,Geneva,sans-serif">Tahoma</option>
				<option value="Monospace Fonts" style="font-weight: bold; background-color: #EEEEEE">Monospace Fonts</option>
				<option value="Courier New,Courier,monospace" style="font-family: Courier New,Courier,monospace">Courier New</option>
				<option value="Lucida Console,Monaco,monospace" style="font-family: Lucida Console,Monaco,monospace">Lucida Console</option>
			</select>
		</div>
	</div>
		<div>
			<label for="colorRef">Couleur de référence :</label>
			<input class="input-color-picker" type="color" id="colorRef" name="colorRef" required="false">
		</div>
	<div>
		<label for="visibility">En ligne :
		</label>
		<input class="input-checkbock-visibility" type="checkbox" name="visibility" id="visibility">
	</div>
	<div>
		<button type="submit" id="submit">Envoyer</button>
	</div>
</form>
</div>	
{% endblock %}

